{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "import/no-unresolved": "off",
    "import/named": "warn",
    "import/namespace": "warn",
    "import/no-named-as-default": "off",
    "import/export": "warn",
    "max-len": ["error", { "code": 120, "tabWidth": 2 }],
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "error",
    "no-unused-vars": "error"
  }
}
